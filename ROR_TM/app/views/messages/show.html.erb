<div class="col-md-8 col-md-offset-2">
	<div class="message-show">
		<h2><%= @message.title %></h2>
		<p class="message-posted-by">Posteado por <%= @message.user.email %> el <%= time_ago_in_words(@message.created_at) %> </p>
		<p class="message-desc"><%= @message.description %></p>
		<!-- Add a Posted By: username at timestamp. -->

		<h3 class="comment-section-header">Comentarios:</h3>
		<!-- renders the _comment.html.erb partial file. -->
		<p><%= render @message.comments %></p>

		<h3 class="reply-to-msg">Responder al Mensaje:</h3>
		<!-- renders the comments form -->
		<%= render 'comments/form' %>


		<!-- Add a conditional so that the 'edit' and 'destroy' links only appear for the user who created the message. -->
		<div class="links btn-group">
			<%= link_to "Volver", root_path, class: "btn btn-default" %>
			<% if @message.user_id == current_user.id %>
				<%= link_to "Editar", edit_message_path(@message), class: "btn btn-default" %>
				<%= link_to "Borrar", message_path(@message), method: :delete, data: { confirm: "Estas seguro?" }, class: "btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>

