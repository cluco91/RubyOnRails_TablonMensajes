<div class="comment">
	<p class="comment-content"><%= comment.content %></p>
	<p class="comment-posted-by">Posteado por <%= comment.user.email %> el <%= time_ago_in_words(comment.created_at) %> </p>

	<div class="links">
		<% if comment.user_id == current_user.id %>
			<%= link_to "Editar", edit_message_comment_path(comment.message, comment) %>
			<%= link_to "Borrar", message_comment_path(comment.message, comment), method: :delete, data: { confirm: "Estas seguro?" } %>
		<% end %>
	</div>
</div>


